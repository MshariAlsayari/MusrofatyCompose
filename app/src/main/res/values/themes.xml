<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.MusrofatyCompose" parent="android:Theme.Material.Light.NoActionBar">
        <item name="android:windowBackground">@color/white</item>
        <item name="colorBackground">@color/white</item>
        <item name="colorBottomNavigationBackground">@color/white</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar">true</item>

    </style>



    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar"/>
    <style name="lightTheme" parent="AppTheme">
        <item name="android:windowBackground">@color/white</item>
        <item name="android:itemBackground">@color/white</item>
        <item name="android:colorControlNormal">@color/light_gray</item>
        <item name="colorStatusBar">@color/primary_color</item>
        <item name="colorToolbar">@color/primary_color</item>
        <item name="colorProgressBar">@color/primary_color</item>
    </style>


    <style name="ProgressBarPrimary" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:progressTint">?attr/colorProgressBar</item>
        <item name="android:scaleY">1.3</item>
    </style>

</resources>